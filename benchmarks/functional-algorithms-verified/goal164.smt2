(assert-not (par (a) (forall ((t (rbt a))) (=> (and (invc a t) (invh a t)) (leq nat (h (pair a color) t) (plus (mult (s (s zero)) (bh a t)) (ite (= (color_of a t) Black) zero (s zero))))))))
